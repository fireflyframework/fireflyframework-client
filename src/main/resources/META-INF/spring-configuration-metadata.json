        },
        {
          "value": "30s",
          "description": "30 seconds - default timeout"
        },
        {
          "value": "60s",
          "description": "60 seconds - for slow APIs"
        }
      ]
    },
    {
      "name": "firefly.service-client.circuit-breaker.failure-rate-threshold",
      "values": [
        {
          "value": "25.0",
          "description": "25% - aggressive circuit breaking"
        },
        {
          "value": "50.0",
          "description": "50% - balanced (default)"
        },
        {
          "value": "75.0",
          "description": "75% - lenient circuit breaking"
        }
      ]
    }
  ]
}

